  "/opt/elasticbeanstalk/hooks/appdeploy/post/01_collectstatic.sh":
    mode: "00755"
    owner: root
    group: root
    content:  |
      #!/usr/bin/env bash
      if  [ -f /tmp/collectstatic ]
      then
        m /tmp/collectstatic
        sudo docker exec `sudo docker ps --no -trunc -q` /root/.pyenv/versions/picky/bin/python /srv/picky/django_app/manage.py collectstatic --noinput --settings=config.settings.deploy
      fi


